<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ProgressBar
            style="@style/St"
            android:layout_width="match_parent"
            android:layout_height="667dp"
            android:id="@+id/progressBar" android:visibility="visible"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:id="@+id/itemdetail_card" app:cardBackgroundColor="@color/otrocolor" android:visibility="invisible">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="89dp"
                    android:layout_height="130dp"
                    android:id="@+id/itemdetail_poster"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/itemdetail_title"
                    app:layout_constraintStart_toEndOf="@+id/itemdetail_poster" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="4dp"
                    android:textColor="@color/floatingBoton" android:textStyle="bold"/>
            <TextView
                    android:text="Nota IMBD: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView18"
                    app:layout_constraintStart_toEndOf="@+id/itemdetail_poster" android:layout_marginBottom="56dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="4dp"
                    android:textColor="@color/floatingBoton"/>
            <TextView
                    android:text="Fecha de estreno: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView19"
                    app:layout_constraintStart_toEndOf="@+id/itemdetail_poster"
                    android:layout_marginStart="4dp" android:textColor="@color/floatingBoton"
                    android:layout_marginBottom="2dp" app:layout_constraintBottom_toTopOf="@+id/textView18"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/itemdetail_originaltitle"
                    app:layout_constraintStart_toEndOf="@+id/itemdetail_poster"
                    android:layout_marginStart="4dp" android:textColor="@color/floatingBoton"
                    app:layout_constraintTop_toBottomOf="@+id/itemdetail_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemdetail_release" app:layout_constraintStart_toEndOf="@+id/textView19"
                    android:layout_marginStart="8dp" android:textColor="@color/floatingBoton"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView19"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemdetail_imbd" app:layout_constraintStart_toEndOf="@+id/textView18"
                    android:textColor="@color/floatingBoton" android:layout_marginStart="4dp"
                    app:layout_constraintTop_toTopOf="@+id/textView18"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>