<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:background="@color/otrocolor"
        android:layout_margin="16dp"
        android:id="@+id/card_movie" android:clickable="true" android:focusable="auto">

    <androidx.cardview.widget.CardView
            android:layout_width="194dp"
            android:layout_height="280dp" app:cardBackgroundColor="@color/otrocolor"
            android:id="@+id/cardView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:clickable="false">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:id="@+id/linearLayout"
        >
            <ImageView
                    android:layout_height="211dp" tools:srcCompat="@drawable/cinta_background2"
                    android:scaleType="fitCenter"
                    android:id="@+id/movie_poster"
                    android:contentDescription="todo" android:visibility="visible"
                    tools:ignore="HardcodedText"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:padding="8dp" android:cropToPadding="false" android:adjustViewBounds="true"
                    android:layout_width="164dp"/>
            <TextView
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:alpha="0.7"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="20dp"
                    app:autoSizeMinTextSize="8dp"
                    android:id="@+id/movie_release_data"
                    android:textStyle="bold" android:textColor="@color/floatingBoton"
                    app:layout_constraintTop_toBottomOf="@+id/movie_title"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_title"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="16dp"
                    app:autoSizeMinTextSize="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/floatingBoton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.05"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/movie_poster"
                    android:paddingRight="4dp" android:paddingLeft="4dp"/>
            <TextView
                    android:layout_width="59dp"
                    android:layout_height="24dp"
                    android:id="@+id/movie_rating"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="20dp"
                    app:autoSizeMinTextSize="8dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" android:textStyle="bold"
                    android:textColor="@color/floatingBoton"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/movie_release_data" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>