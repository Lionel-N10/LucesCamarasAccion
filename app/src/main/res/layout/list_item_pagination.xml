<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@color/colorPrimary" android:layout_margin="8dp">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="300dp" tools:srcCompat="@mipmap/ic_launcher"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/item_movie_poster"
            android:contentDescription="todo" android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/item_movie_genre" android:layout_marginStart="8dp"
            tools:ignore="HardcodedText" android:paddingBottom="4dp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" android:background="@drawable/login_background"
            android:layout_marginEnd="8dp" android:cropToPadding="false" android:adjustViewBounds="true"
            android:padding="4dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:alpha="0.7"
            android:text="@string/_2018"
            android:id="@+id/item_movie_release_date"
            app:layout_constraintEnd_toStartOf="@+id/item_movie_rating"
            app:layout_constraintStart_toEndOf="@+id/item_movie_poster"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold" android:textColor="@color/colorAccent"/>
    <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/list_item_pagination_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_movie_poster"
            app:layout_constraintTop_toBottomOf="@+id/item_movie_release_date"
            android:textColor="@color/colorAccent" android:textStyle="italic"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/item_movie_genre"
            android:text="@string/accion_comedia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_movie_poster"
            app:layout_constraintTop_toBottomOf="@+id/list_item_pagination_text" android:layout_marginStart="8dp"
            android:textStyle="bold" android:textColor="@color/colorAccent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/item_movie_rating"
            android:text="@string/_8_0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold" android:textColor="@color/colorAccent"/>
</androidx.constraintlayout.widget.ConstraintLayout>