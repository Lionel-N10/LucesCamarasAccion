<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@drawable/cinta_background2"
        android:layout_margin="8dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
        android:id="@+id/card_movie" android:clickable="true">

    <ImageView
            android:layout_width="161dp"
            android:layout_height="264dp" tools:srcCompat="@drawable/gladiator_poster"
            android:scaleType="centerInside"
            android:id="@+id/movie_poster"
            android:contentDescription="todo" android:visibility="visible"
            tools:ignore="HardcodedText" android:paddingBottom="12dp"
            android:cropToPadding="false" android:adjustViewBounds="true"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/movie_genre" android:layout_marginEnd="8dp"
            android:paddingStart="20dp" android:paddingEnd="2dp"/>
    <TextView
            android:layout_width="74dp"
            android:layout_height="16dp"
            android:alpha="0.7"
            android:text="@string/_2018"
            android:id="@+id/movie_release_data"
            android:textStyle="bold" android:textColor="@color/colorAccent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/movie_poster"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="38dp" app:layout_constraintBottom_toTopOf="@+id/movie_genre"/>
    <TextView
            android:text="@string/titulo"
            android:layout_width="133dp"
            android:layout_height="20dp"
            android:id="@+id/movie_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorAccent" android:textStyle="italic"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/movie_release_data"
            app:layout_constraintStart_toEndOf="@+id/movie_poster"
            android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="151dp"
            android:layout_height="14dp"
            android:id="@+id/movie_genre"
            android:text="@string/accion_comedia"
            android:textStyle="bold" android:textColor="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/movie_release_data"
            android:layout_marginBottom="155dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12sp"
            android:layout_marginEnd="28dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_rating"
            android:text="@string/_8_0"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="14dp"
            android:textColor="@color/nota"/>
</androidx.constraintlayout.widget.ConstraintLayout>