<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/linearLayout">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/otrocolor" app:cardCornerRadius="5dp"
            app:cardElevation="24dp" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:id="@+id/lista_card">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="8dp">

            <TextView
                    android:layout_height="wrap_content" android:id="@+id/lista_titulo"
                    android:textColor="@color/floatingBoton"
                    app:layout_constraintStart_toEndOf="@+id/lista_position"
                    android:layout_marginStart="28dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:autoSizeMaxTextSize="20dp"
                    app:autoSizeMinTextSize="12dp" android:textStyle="bold|italic" android:layout_width="0dp"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lista_movie_count"
                    android:textColor="@color/floatingBoton"
                    app:layout_constraintStart_toEndOf="@+id/textView14"
                    android:layout_marginStart="20dp" android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/lista_titulo"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lista_position"
                    android:textColor="@color/floatingBoton" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="@string/countmovies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:textColor="@color/floatingBoton" android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/lista_titulo" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:textSize="12sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idLista" android:visibility="invisible"
                    app:layout_constraintBaseline_toBaselineOf="@+id/lista_movie_count"
                    android:layout_marginStart="5dp" app:layout_constraintStart_toEndOf="@+id/lista_movie_count"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>