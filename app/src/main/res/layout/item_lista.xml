<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/constraintLayout">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/otrocolor" app:cardCornerRadius="5dp"
            app:cardElevation="24dp" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:id="@+id/lista_card">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@string/lista_1"
                    android:layout_height="wrap_content" android:id="@+id/lista_titulo"
                    android:textColor="@color/floatingBoton"
                    app:layout_constraintStart_toEndOf="@+id/lista_position"
                    android:layout_marginStart="28dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" app:autoSizeMaxTextSize="20dp"
                    app:autoSizeMinTextSize="12dp" android:textStyle="bold|italic" android:layout_width="wrap_content"/>
            <TextView
                    android:text="@string/_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lista_movie_count"
                    android:textColor="@color/floatingBoton"
                    app:layout_constraintStart_toEndOf="@+id/textView14"
                    android:layout_marginStart="20dp" android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/lista_titulo"/>
            <TextView
                    android:text="@string/_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lista_position"
                    android:textColor="@color/floatingBoton" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="@string/n_de_pel_culas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:textColor="@color/floatingBoton" android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/lista_titulo" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:textSize="12sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>