<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MovieDetail" android:id="@+id/frameLayout"
                                                   android:background="@color/otrocolor">

    <!-- TODO: Update blank fragment layout -->
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="85dp"
            android:layout_height="76dp"
            android:id="@+id/progressBar_moviedetails"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/scrollView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fillViewport="true" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:visibility="gone" android:nestedScrollingEnabled="true">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/moviedetail_layout"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/cinta_background">

            <TextView
                    android:text="@string/gladiator"
                    android:layout_width="0dp"
                    android:layout_height="19dp" android:id="@+id/movie_orgininal_title"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/movie_rating" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/movie_title"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="@string/gladiator"
                    android:layout_width="105dp"
                    android:layout_height="24dp"
                    android:id="@+id/movie_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorAccent" android:textStyle="italic"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="60dp" android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/movie_orgininal_title"/>
            <TextView
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:id="@+id/movie_rating"
                    android:text="@string/_8_0"
                    android:textStyle="bold" android:textColor="@color/colorAccent"
                    app:layout_constraintTop_toTopOf="@+id/movie_genre" android:layout_marginTop="27dp"
                    android:layout_marginStart="6dp"
                    app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginBottom="23dp"
                    app:layout_constraintBottom_toTopOf="@+id/movie_release_data"/>
            <TextView
                    android:layout_width="294dp"
                    android:layout_height="0dp"
                    android:id="@+id/movie_sipnosis" android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp" android:background="@color/floatingBoton"
                    app:layout_constraintHorizontal_bias="0.557"
                    android:layout_marginTop="18dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:id="@+id/movie_genre"
                    android:text="@string/accion_comedia"
                    android:textStyle="bold" android:textColor="@color/colorAccent"
                    android:layout_marginTop="75dp" app:layout_constraintEnd_toStartOf="@+id/movie_rating"
                    android:layout_marginBottom="73dp" app:layout_constraintTop_toTopOf="@+id/movie_title"
                    app:layout_constraintStart_toStartOf="@+id/movie_rating"
                    app:layout_constraintBottom_toBottomOf="@+id/movie_release_data"/>
            <TextView
                    android:layout_width="73dp"
                    android:layout_height="20dp"
                    android:alpha="0.7"
                    android:text="@string/_2018"
                    android:id="@+id/movie_release_data"
                    android:textStyle="bold" android:textColor="@color/colorAccent"
                    android:layout_marginTop="122dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView5" android:layout_marginStart="3dp"
                    app:layout_constraintTop_toBottomOf="@+id/movie_title"
                    app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginBottom="122dp"/>
            <TextView
                    android:text="@string/generos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@+id/movie_genre" android:layout_marginStart="60dp"/>
            <TextView
                    android:text="@string/fecha_de_estreno"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:id="@+id/textView2"
                    app:layout_constraintBaseline_toBaselineOf="@+id/movie_release_data"
                    app:layout_constraintEnd_toStartOf="@+id/movie_rating" android:layout_marginEnd="3dp"
            />
            <TextView
                    android:text="@string/sipnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" android:textColor="@color/colorAccent"
                    android:textAllCaps="false"
                    android:background="@color/floatingBoton"
                    app:layout_constraintStart_toStartOf="@+id/movie_sipnosis"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="160dp"/>
            <TextView
                    android:text="@string/imdb_puntuaci_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    app:layout_constraintBaseline_toBaselineOf="@+id/movie_rating"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintEnd_toEndOf="@+id/textView4"/>
            <ImageView
                    android:layout_width="231dp"
                    android:layout_height="0dp" tools:srcCompat="@drawable/gladiator_poster"
                    android:scaleType="centerInside"
                    android:id="@+id/movie_poster"
                    android:contentDescription="todo" android:visibility="visible"
                    tools:ignore="HardcodedText" android:paddingBottom="4dp"
                    android:background="@drawable/ic_launcher_foreground"
                    android:cropToPadding="false" android:adjustViewBounds="true"
                    android:padding="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="88dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="11dp"
                    app:layout_constraintBottom_toTopOf="@+id/movie_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>