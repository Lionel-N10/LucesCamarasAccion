<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/constrintLayout">

    <fragment
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_height="680dp"
            android:id="@+id/host_fragment" android:layout_width="match_parent" android:layout_marginTop="55dp"
            tools:layout="@layout/fragment_home"/>
    <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_gravity="bottom"
            app:fabAlignmentMode="center"
            app:hideOnScroll="true"
            app:layout_scrollFlags="scroll|enterAlways"
            app:backgroundTint="@color/otrocolor"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_movie"
            android:id="@+id/floatingActionButton" app:layout_anchorGravity="top|center"
            android:focusable="true" app:layout_anchor="@+id/bar"
            app:backgroundTint="@color/floatingBoton"/>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/otrocolor"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>