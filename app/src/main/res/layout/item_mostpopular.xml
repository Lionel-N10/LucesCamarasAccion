<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/linearLayout3">

    <androidx.cardview.widget.CardView
            android:layout_width="132dp"
            android:layout_height="193dp" app:cardBackgroundColor="@color/otrocolor"
            android:id="@+id/cardViewMostPopu" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mostpopular_poster" android:padding="8dp"
        />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>